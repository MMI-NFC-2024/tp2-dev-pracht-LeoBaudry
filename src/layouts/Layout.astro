    width: 6px;
  }

  ::-webkit-scrollbar-track {
    background: rgba(0,0,0,0.1);
    border-radius: 3px;
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(to bottom, #60a5fa, #3b82f6);
    border-radius: 3px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(to bottom, #3b82f6, #1d4ed8);
  }

  /* Responsive */
