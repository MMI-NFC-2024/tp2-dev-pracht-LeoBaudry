---
import GraphicSpecies from "../components/GraphicSpecies.astro";
---

<div class="p-4">
  <h1 class="text-2xl font-bold mb-4">TP2 - Tous les graphiques</h1>

  <!-- Slider horizontal -->
  <div class="overflow-x-auto">
    <div class="flex gap-4" style="scroll-behavior: smooth;">
      <section id="Adelie" class="min-w-[300px] flex-shrink-0">
        <GraphicSpecies species="Adelie" />
      </section>

      <section id="Gentoo" class="min-w-[300px] flex-shrink-0">
        <GraphicSpecies species="Gentoo" />
      </section>

      <section id="Chinstrap" class="min-w-[300px] flex-shrink-0">
        <GraphicSpecies species="Chinstrap" />
      </section>
    </div>
  </div>
</div>
